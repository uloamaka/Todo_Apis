{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Todo_Apis",
    "description": "Complete Documentation for Todo_Apis v1.0.0"
  },
  "host": "Todo_Apis.onrender.com",
  "basePath": "/api/v1",
  "schemes": ["https", "http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "tags": [
    {
      "name": "Authentication",
      "description": "User registration and login endpoints"
    },
    {
      "name": "Todo",
      "description": "Todos Endpoints"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "username": {
                  "type": "string",
                  "example": "john_doe"
                },
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "john@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              },
              "required": ["username", "email", "password"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User registered successfully"
          },
          "400": {
            "description": "Bad Request. Invalid input or user already exists."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "User login",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "john@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              },
              "required": ["email", "password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login successful"
          },
          "401": {
            "description": "Unauthorized. Invalid credentials."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/forget-password": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Initiate password reset process",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "example": "john@example.com"
                }
              },
              "required": ["email"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password reset initiated. Check your email for instructions."
          },
          "404": {
            "description": "Not Found. User with the provided email not found."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/reset-password/{userId}/{resetToken}": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Reset user password",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "resetToken",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "newPassword": {
                  "type": "string",
                  "example": "newPassword123"
                }
              },
              "required": ["newPassword"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password reset successful"
          },
          "400": {
            "description": "Bad Request. Invalid user ID, token, or expired token."
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/create": {
      "post": {
        "tags": ["Todo"],
        "description": "Endpoint to create a new Todo task.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string",
                  "example": "personal"
                },
                "content": {
                  "type": "string",
                  "example": "Finish messaging logic for the chat app"
                },
                "status": {
                  "type": "string",
                  "example": "pending"
                },
                "due_date": {
                  "type": "string",
                  "example": "2023-12-02T21:58:17.391Z"
                }
              },
              "required": ["category", "content"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created Todo task Successfully."
          },
          "400": {
            "description": "Bad Request, Invalid task_id format."
          },
          "500": {
            "description": "Internal Server Error, Error processing request from the server."
          }
        }
      }
    },
    "/{task_id}": {
      "get": {
        "tags": ["Todo"],
        "description": "Fetch a Todo task by task id",
        "parameters": [
          {
            "name": "task_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success, Successfully processed request."
          },
          "400": {
            "description": "Bad Request, Invalid task_id format."
          },
          "404": {
            "description": "Not Found, Todo task Not Found."
          },
          "500": {
            "description": "Internal Server Error, Error processing request from the server."
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": ["Todo"],
        "description": "Fetch all Todo tasks of a user",
        "responses": {
          "200": {
            "description": "Success, Successfully processed request."
          },
          "400": {
            "description": "Bad Request, Invalid task_id format."
          },
          "404": {
            "description": "Not Found, Todo tasks Not Found."
          },
          "500": {
            "description": "Internal Server Error, Error processing request from the server."
          }
        }
      }
    },
    "/{task_id}/edit_content": {
      "patch": {
        "tags": ["Todo"],
        "description": "Update a Todo task content by task id",
